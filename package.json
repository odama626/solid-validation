{
  "name": "@sparkstone/solid-validation",
  "version": "1.0.0",
  "description": "A lightweight form validation library for Solid.js with PocketBase integration.",
  "type": "module",
  "source": "src/main.ts",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "require": "./dist/main.cjs",
      "default": "./dist/main.modern.js",
      "types": "./dist/main.d.ts"
    },
    "./pocketbase": {
      "require": "./dist/pocketbase.cjs",
      "default": "./dist/pocketbase.modern.js",
      "types": "./dist/pocketbase.d.ts"
    }
  },
  "main": "./dist/main.cjs",
  "module": "./dist/main.module.js",
  "unpkg": "./dist/main.umd.js",
  "scripts": {
    "build": "microbundle src/*.ts --generateTypes",
    "dev": "microbundle watch src/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": ["dist", "readme"],
  "keywords": [
    "solid-js",
    "validation",
    "form-validation",
    "solid-validation",
    "pocketbase",
    "typescript",
    "frontend"
  ],
  "author": "Sparkstone",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/odama626/solid-validation.git"
  },
  "bugs": {
    "url": "https://github.com/odama626/solid-validation/issues"
  },
  "homepage": "https://github.com/odama626/solid-validation#readme",
  "devDependencies": {
    "microbundle": "^0.15.1",
    "solid-js": "^1.9.4"
  }
}
